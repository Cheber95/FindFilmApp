<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_list_margin"
    android:outlineProvider="paddedBounds"
    android:backgroundTint="@color/fairytale_blue"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_list_margin"
        >

        <TextView
            android:id="@+id/name_of_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/some_film_name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

        <ImageView
            android:id="@+id/poster_film"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/card_list_margin"
            tools:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_list_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_grade_24" />

            <TextView
                android:id="@+id/film_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/rating_title" />

            <TextView
                android:id="@+id/film_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="2021" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>