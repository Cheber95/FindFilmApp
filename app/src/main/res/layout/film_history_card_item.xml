<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_list_margin"
    android:backgroundTint="@color/fairytale_blue"
    android:outlineProvider="paddedBounds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_list_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_of_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            tools:text="@string/some_film_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/poster_film"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                android:layout_marginTop="@dimen/card_list_margin"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/card_list_margin">

                <TextView
                    android:id="@+id/film_history_countries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/some_film_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/history_film_premiere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/some_film_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/history_film_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/some_film_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/history_film_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/some_film_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/film_history_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_list_margin"
                    tools:text="@string/some_film_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/film_history_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_list_margin"
                    tools:text="@string/some_film_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_list_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_grade_24" />

            <TextView
                android:id="@+id/film_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/rating_title" />

            <TextView
                android:id="@+id/time_on_clicked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="2021" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>